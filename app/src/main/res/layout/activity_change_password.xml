<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.commonApp.ChangePasswordActivity">

    <include
        layout="@layout/topbar_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtOldPwd"
            style="@style/txtLoginScreen1"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/old_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/whitebg"
            android:elevation="@dimen/_6sdp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_4sdp"
                android:src="@mipmap/locak" />

            <EditText
                android:id="@+id/etxtPwd"
                style="@style/etxtLoginScreen1"
                android:inputType="textPassword" />

        </LinearLayout>
        <TextView
            android:id="@+id/txtNewPwd"
            style="@style/txtLoginScreen1"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/new_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtOldPwd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/whitebg"
            android:gravity="center"
            android:elevation="@dimen/_6sdp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtOldPwd">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_4sdp"
                android:src="@mipmap/locak" />

            <EditText
                android:id="@+id/etxtNewPwd"
                style="@style/etxtLoginScreen1"
                android:inputType="textPassword" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtConfirmPwd"
            style="@style/txtLoginScreen1"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/confirm_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNewPwd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/whitebg"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_6sdp"
            android:elevation="@dimen/_6sdp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNewPwd">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:padding="@dimen/_4sdp"
                android:src="@mipmap/locak" />

            <EditText
                android:id="@+id/etxtConfirmPwd"
                style="@style/etxtLoginScreen1"
                android:inputType="textPassword" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginStart="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_35sdp"
        android:id="@+id/txtUpdatePassword"
        style="@style/txtButton1"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/update_password" />
</LinearLayout>