<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firebase Notification Demo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FCM Token: Not available"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:background="@color/gray"
        android:padding="12dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnGetToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get FCM Token"
        android:layout_marginBottom="8dp"
        android:background="@color/teal_200"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnCheckPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Notification Permission"
        android:layout_marginBottom="8dp"
        android:background="@color/green2"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnRequestPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Notification Permission"
        android:layout_marginBottom="16dp"
        android:background="@color/green2"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe to Topics"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnSubscribeGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe to General Notifications"
        android:layout_marginBottom="8dp"
        android:background="@color/green2"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnSubscribeCoach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe to Coach Notifications"
        android:layout_marginBottom="8dp"
        android:background="@color/blue1"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnSubscribeParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe to Parent Notifications"
        android:layout_marginBottom="16dp"
        android:background="@color/grey1"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnUnsubscribeGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unsubscribe from General Notifications"
        android:layout_marginBottom="8dp"
        android:background="@color/red"
        android:textColor="@color/white" />

</LinearLayout>

