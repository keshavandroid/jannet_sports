<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_radius_4dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_report_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reschedule Your Event"
            android:padding="@dimen/_10sdp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For rescheduling event select new date and time"
            android:padding="@dimen/_10sdp"
            android:layout_below="@+id/tv_report_title"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/grey1"
            android:textSize="@dimen/_14ssp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:id="@+id/ll_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tv_description">

            <TextView
                android:id="@+id/txtselectdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_bg"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Select Date"
                android:fontFamily="sans-serif-black"
                android:textSize="@dimen/_14ssp"
                />
            <TextView
                android:id="@+id/txtselecttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_bg"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Select Time"
                android:fontFamily="sans-serif-black"
                android:textSize="@dimen/_14ssp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_date_time"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/et_report_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_bg"
                android:backgroundTint="@color/colorRed"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="@string/cancel"
                android:fontFamily="sans-serif-black"
                android:textSize="@dimen/_13ssp"
                />

            <TextView
                android:id="@+id/et_report_Yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_bg"
                android:backgroundTint="@color/teal_200"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="sans-serif-black"
                android:padding="@dimen/_10sdp"
                android:text="Reschedule" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>