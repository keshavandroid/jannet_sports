<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.loginRegister.PhoneEmailVerificationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include
                android:id="@+id/topBar"
                layout="@layout/topbar_layout" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:orientation="vertical"
                    android:paddingBottom="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_verification"
                        android:textColor="@color/blue1"
                        android:textSize="@dimen/_17ssp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:src="@mipmap/in" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etxtNo1"
                        style="@style/etxtPhoneEmailVerificationScreen1" />

                    <EditText
                        android:id="@+id/etxtNo2"
                        style="@style/etxtPhoneEmailVerificationScreen1" />

                    <EditText
                        android:id="@+id/etxtNo3"
                        style="@style/etxtPhoneEmailVerificationScreen1" />

                    <EditText
                        android:id="@+id/etxtNo4"
                        style="@style/etxtPhoneEmailVerificationScreen1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtVerifyPh"
                    style="@style/txtButton1"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:text="@string/verify" />

                <TextView
                    android:id="@+id/txtPhoneOtp"
                    style="@style/txtPhVerifiScreen1"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/otp" />

                <TextView
                    android:id="@+id/tv_resend_Code_phone"
                    style="@style/txtPhVerifiScreen1"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/resend_code"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:background="@color/grey1" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_verification"
                        android:textColor="@color/blue1"
                        android:textSize="@dimen/_17ssp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:src="@mipmap/in" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etxtNo11"
                        style="@style/etxtPhoneEmailVerificationScreen1" />

                    <EditText
                        android:id="@+id/etxtNo12"
                        style="@style/etxtPhoneEmailVerificationScreen1" />

                    <EditText
                        android:id="@+id/etxtNo13"
                        style="@style/etxtPhoneEmailVerificationScreen1" />

                    <EditText
                        android:id="@+id/etxtNo14"
                        style="@style/etxtPhoneEmailVerificationScreen1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtVerifyEmail"
                    style="@style/txtButton1"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:text="@string/verify" />

                <TextView
                    android:id="@+id/txtEmailOtp"
                    style="@style/txtPhVerifiScreen1"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/otp" />

                <TextView
                    android:id="@+id/tv_resend_code_email"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/resend_code"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>