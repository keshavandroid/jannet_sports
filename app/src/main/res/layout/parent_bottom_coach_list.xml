<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAbout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:elevation="@dimen/_8sdp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/quantum_white_100"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginVertical="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_47sdp"
                    android:id="@+id/iv_all_coach_image"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_height="@dimen/_47sdp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_all_coach_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/david_m_garcia"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            />

                        <TextView
                            android:id="@+id/tv_all_coach_sports"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sport_type"
                            android:visibility="gone"
                            android:textColor="@color/grey2"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textSize="@dimen/_10ssp"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:visibility="gone"
                    android:background="@color/green2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/sportsTypeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sports Type"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:textColor="@color/green6"
                android:textSize="@dimen/_13ssp" />

            <HorizontalScrollView
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llSportsType"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>