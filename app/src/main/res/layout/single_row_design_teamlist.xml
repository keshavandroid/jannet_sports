    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/rounded1"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        android:translationZ="@dimen/_5sdp">


        <ImageView
            android:id="@+id/imgTeam"
            android:layout_width="@dimen/_43sdp"
            android:layout_height="@dimen/_43sdp"
            android:scaleType="fitXY"
            android:src="@mipmap/usa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_teamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/united_states_men_s_nationalbasketball"
                android:textColor="@color/green6"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@mipmap/ball" />

                <TextView
                    android:id="@+id/tv_sports_type_event_Detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="@string/basketball"
                    android:textColor="@color/grey2"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:gravity="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">



                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_edit_team"
                    android:src="@mipmap/create"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/circle2"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_delete_team"
                    android:src="@mipmap/delete_icn"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:padding="@dimen/_4sdp"
                    android:background="@drawable/circle2"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>