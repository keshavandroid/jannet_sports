<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/_10sdp"
    android:paddingStart="@dimen/_10sdp"
    android:id="@+id/clMain"
    android:paddingEnd="@dimen/_10sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imgSports"
        android:src="@color/green1"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_15sdp"
        app:layout_constraintDimensionRatio="1:1"/>

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSports"
        android:layout_width="0dp"
        android:singleLine="true"
        android:id="@+id/txtSportsName"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:text="Sport Name"
        android:textColor="@color/green6"
        android:textSize="@dimen/_13ssp"/>

    <ImageView
        android:padding="@dimen/_4sdp"
        android:src="@mipmap/done"
        android:id="@+id/imgSelected"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/circle1"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>